{
    "type": "object",
    "patternProperties": {
        "^.+" : {
            "type": "object",
            "properties": {
                "ip-mtu": {
                    "type": "number"
                },
                "ipv4_address": {
                    "type": "string",
                    "pattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3})/[0-9]{1,2}$",
                    "description": "IPv4 address with prefix"
                },
                "ipv6_address": {
                    "type": "string",
                    "pattern": "^(((:|[0-9a-fA-F]{0,4}):)([0-9a-fA-F]{0,4}:){0,5}((([0-9a-fA-F]{0,4}:)?(:|[0-9a-fA-F]{0,4}))|(((25[0-5]|2[0-4]\\d|[01]?\\d?\\d)\\.){3}(25[0-5]|2[0-4]\\d|[01]?\\d?\\d)))(\\/((\\d)|(\\d{2})|(1[0-1]\\d)|(12[0-8]))))$",
                    "description": "IPv6 address with prefix"
                },

                "acl": {
                    "type": "object",
                    "properties": {
                        "input": {
                            "type": "object",
                            "properties": {
                                "ipv4": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "output": {
                            "type": "object",
                            "properties": {
                                "ipv4": {
                                    "type:": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "ipv6": {
                    "type": "object",
                    "properties": {
                        "ra": {
                            "type": "string",
                            "description": "IPv6 Router Advertisement",
                            "enum": ["enable", "disable"]
                        },
                        "ra_min_interval": {
                            "type": "number"
                        },
                        "ra_max_interval": {
                            "type": "number"
                        },
                        "ra_prefix": {
                            "type": "string",
                            "pattern": "^(((:|[0-9a-fA-F]{0,4}):)([0-9a-fA-F]{0,4}:){0,5}((([0-9a-fA-F]{0,4}:)?(:|[0-9a-fA-F]{0,4}))|(((25[0-5]|2[0-4]\\d|[01]?\\d?\\d)\\.){3}(25[0-5]|2[0-4]\\d|[01]?\\d?\\d)))(\\/((\\d)|(\\d{2})|(1[0-1]\\d)|(12[0-8]))))$",
                            "description": "IPv6 Router Advertisement Prefix"
                        }
                    }
                }
            }
        }
    }
}
