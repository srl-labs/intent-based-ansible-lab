{
    "type": "object",
    "patternProperties": {
        "^.*" : {
            "type": "object",
            "required": ["id", "snet_list"],
            "properties": {
                "id": {
                    "type": "number"
                },
                "_state": {
                    "type": "string",
                    "enum": ["deleted", "present"]
                },
                "external": {
                    "type": "boolean"
                },
                "type": {
                    "type": "string",
                    "const": "ip-vrf"
                },
                "arp_timeout": {
                    "type": "number"
                },
                "snet_list": {
                    "type": "array",
                    "items" : {
                        "type": "object",
                        "required": ["macvrf", "gw"],
                        "properties": {
                            "macvrf": {
                                "type": "string"
                            },
                            "gw": {
                                "type": "string",
                                "pattern": "^(\\d{1,3}\\.){3}\\d{1,3}(?:\/\\d{1,2})?$"
                            },
                            "acl_v4_in": {
                                "description": "List of IPv4 ACLs to apply to ingress traffic. Platform type may allow only one ACL per interface.",
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "acl_v4_out": {
                                "description": "List of IPv4 ACLs to apply to egress traffic. Platform type may allow only one ACL per interface.",
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "export_rt": {
                    "type": "string",
                    "pattern": "^\\d+:\\d+"
                },
                "import_rt": {
                    "type": "string",
                    "pattern": "^\\d+:\\d+"
                }
            }
        }
    }
}
